<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            tools:text="Bensouici"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nom"
            tools:text="yacine"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prenom"
            android:text="("
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="DAM"
            android:layout_toRightOf="@id/left"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/module"
            android:text=")"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:id="@+id/typeimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/right"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            tools:src="@drawable/receved"/>
        <LinearLayout
            android:id="@+id/replyLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/replyimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reply"/>

            <TextView
                android:id="@+id/replytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reply"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/objet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="credits"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>